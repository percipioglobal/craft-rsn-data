{% extends "rsn-data/layouts/_cp" %}

{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("percipioglobal\\rsndata\\assetbundles\\rsndata\\RsnDataAsset") %}
{% do view.registerAssetBundle("percipioglobal\\rsndata\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# The title of this CP section #}
{% set title = "Export Data"|t('rsn-data') %}
{% set selectedNavItem = 'export' %}
{% set selectedSite = craft.request.getQuery('site')|default('') %}

{# any header buttons #}
{% block actionButton %}
        {% include "rsn-data/_includes/sites-menu.twig" with {
        baseUrl: '/admin/rsn-data/' ~ selectedNavItem,
        currentSiteId: currentSite.id,
        currentSiteHandle: currentSite.handle,
        currentSiteName:  currentSite.name
    } %}

<div class="input ltr">
    <div class="select js-select">
        <select id="data-school-set" name="">
            <option value="schools-all" selected>All Schools</option>
        </select>
    </div>
</div>
<div class="input ltr">
    <div class="select js-select">
        <select id="data-time-set" name="Time Period">
            <optgroup label="Time">
                <option value="12-months" selected>All time</option>
            </optgroup>
        </select>
    </div>
</div>
{% endblock %}

{% set content %}
    <h2>{{ title }}</h2>
    <p>
        <a href="https://api.v2.metaseed.io/export/{{ selectedSite }}-all-schools-all-time.csv?auth=rsn-staging&token=kPX2asGX5ZI8yebN33zBKbN33zBKZZkPX2asGX5ZI8" target="blank" class="btn submit">Export CSV</a>
    </p>
{% endset %}